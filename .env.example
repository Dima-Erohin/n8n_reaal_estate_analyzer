#############################################
#                DATABASE                   #
#############################################

DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=your-db-host
DB_POSTGRESDB_PORT=your-port
DB_POSTGRESDB_USER=your-user
DB_POSTGRESDB_PASSWORD=your-password
DB_POSTGRESDB_DATABASE=your-db-name
DB_POSTGRESDB_SCHEMA=public


#############################################
#               EXECUTIONS                  #
#############################################

# Удалять старые Execution через 7 суток
EXECUTIONS_DATA_MAX_AGE=168
EXECUTIONS_DATA_PRUNE=true

# Запускать Execution во внутреннем worker-е (лучше для Render)
EXECUTIONS_MODE=regular


#############################################
#                 SECURITY                   #
#############################################

# Ключ шифрования кредов (обязательно!)
# Используй любой 32-байтный hex
N8N_ENCRYPTION_KEY=your_256bit_hex_key_here

# Разрешить доступ к env внутри Code/JS нод
N8N_BLOCK_ENV_ACCESS_IN_NODE=false

# Безопасность Git Node
N8N_GIT_NODE_DISABLE_BARE_REPOS=true


#############################################
#                NETWORKING                 #
#############################################

# Домен твоего сервиса на Render
N8N_HOST=your-service.onrender.com

# На Render всегда HTTPS
N8N_PROTOCOL=https

# Полный URL для генерации webhook-ов
N8N_BASE_URL=https://your-service.onrender.com/

# Явно указываем URL для Webhook Trigger
WEBHOOK_URL=https://your-service.onrender.com/

# Порт, который слушает n8n внутри контейнера
N8N_PORT=5678
N8N_LISTEN_ADDRESS=0.0.0.0


#############################################
#                 GENERAL                   #
#############################################

NODE_ENV=production
